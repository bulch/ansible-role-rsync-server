---
extends: default

rules:
  line-length:
    max: 200
    level: warning
  comments-indentation: false
  comments:
    # prettier compatibility
    min-spaces-from-content: 1
  document-start:
    present: true
  indentation:
    level: error
    indent-sequences: consistent
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  braces:
    max-spaces-inside: 1

ignore: |
  .github/stale.yml
  venv
  .tox
  .cache/
